<body>
  <div class="converter">
    <h1>Temperature Converter</h1>
    <form id="tempForm">
      <label for="inputTemp">Enter Temperature:</label>
      <input type="number" id="inputTemp" placeholder="Temperature value" required />

      <label for="inputUnit">From:</label>
      <select id="inputUnit" required>
        <option value="celsius">Celsius (°C)</option>
        <option value="fahrenheit">Fahrenheit (°F)</option>
        <option value="kelvin">Kelvin (K)</option>
      </select>

      <label for="outputUnit">To:</label>
      <select id="outputUnit" required>
        <option value="celsius">Celsius (°C)</option>
        <option value="fahrenheit">Fahrenheit (°F)</option>
        <option value="kelvin">Kelvin (K)</option>
      </select>

      <button type="submit">Convert</button>
    </form>
    <div class="result" id="result">Result will appear here</div>
  </div>

<script>
  document.getElementById('tempForm').addEventListener('submit', function(e) {
    e.preventDefault();

    const temp = parseFloat(document.getElementById('inputTemp').value);
    const fromUnit = document.getElementById('inputUnit').value;
    const toUnit = document.getElementById('outputUnit').value;
    let result;

    if (isNaN(temp)) {
      result = 'Please enter a valid number';
    } else if (fromUnit === toUnit) {
      result = `${temp.toFixed(2)} °${toUnit.charAt(0).toUpperCase()}`;
    } else {
      let tempC;
      switch(fromUnit) {
        case 'celsius':
          tempC = temp; break;
        case 'fahrenheit':
          tempC = (temp - 32) * 5/9; break;
        case 'kelvin':
          tempC = temp - 273.15; break;
      }
      switch(toUnit) {
        case 'celsius':
          result = `${tempC.toFixed(2)} °C`; break;
        case 'fahrenheit':
          result = `${(tempC * 9/5 + 32).toFixed(2)} °F`; break;
        case 'kelvin':
          result = `${(tempC + 273.15).toFixed(2)} K`; break;
      }
    }
    document.getElementById('result').textContent = result;
  });
</script>
</body>
